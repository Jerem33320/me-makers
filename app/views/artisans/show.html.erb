<div class="container">
    <h1 class="top-title"><%= @artisan.first_name %> <%= @artisan.last_name %></h1>
    <h4 class="top-title"><%= @artisan.specialty %></h4>




<!-- carousel -->
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100 rounded" style="max-height: 194px" src="https://images.pexels.com/photos/271647/pexels-photo-271647.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940/800x400?auto=yes&bg=777&fg=555&text=First slide" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 rounded" style="max-height: 194px" src="https://images.pexels.com/photos/210687/pexels-photo-210687.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=350/800x400?auto=yes&bg=666&fg=444&text=Second slide" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 rounded" style="max-height: 194px" src="https://images.pexels.com/photos/273843/pexels-photo-273843.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=350/800x400?auto=yes&bg=555&fg=333&text=Third slide" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


  <!-- profil -->
  <div class="card border-white" style="margin-bottom: 50px; margin-top: 20px">
    <div class="card-body" style="color: #545d7e; text-shadow:none">
        <div class="float-left" style="margin-right: 10px">
          <img src="https://kitt.lewagon.com/placeholder/users/random" alt="..." class="rounded-circle" style="height: 60px; width: 60px">
        </div>
        <div style="margin-left: 10px">
          <h5 class="card-title">Card title</h5>
        <div>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
        </div>
          <p class="card-text">This is a wider card with supporting text below.This is a wider card with supporting text below.</p>
          <i class="fas fa-heart float-right"></i>
          <i class="fas fa-share float-right" style="margin-right: 10px"></i>
        </div>
    </div>
  </div>

  <!-- Map -->
    <div id="map" style="width: 100%; height: 300px; margin-top: 30px" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>


<!-- Reviews -->
<%= render "shared/review" %>


  <!-- Menu dÃ©roulant -->
  <div class="dropup fixed-bottom" style="margin-bottom: 10px">
    <button class="btn btn-danger dropdown-toggle btn-lg btn-block" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Choisie ton projet
    </button>
    <div class="dropdown-menu btn-block" aria-labelledby="dropdownMenuButton">
      <% current_user.projects.each do |project| %>
        <%= button_to project.title, artisan_prestations_path(@artisan, project_id: project.id), method: :post, class: "dropdown-item" %>
      <% end %>
    </div>
  </div>
</div>

