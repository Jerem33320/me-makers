<div class="container">
  <h1 class="top-title">Tous nos artisans</h1>

  <div style="text-align: center;">
    <img src="https://www.renovationettravaux.fr/wp-content/uploads/2015/04/Les-artisans-du-b%C3%A2timent.jpg" style="max-height: 200px">
  </div>


  <% @artisans.each do |artisan| %>
    <%= link_to artisan_path(artisan.id) do %>
      <div class="card border-white" style="margin-bottom: 20px">
        <div class="card-body border-white" style="color: #545d7e; text-shadow:none; padding-left: 0px; padding-right: 0px">
          <div class="float-left" style="margin-right: 10px">
            <%= cl_image_tag artisan.photo, class: "rounded-circle", style: "height: 60px; width: 60px" %>
          </div>
          <div style="margin-left: 10px">
            <h5 class="card-title"><%= artisan.specialty %></h5>
            <h6 class="card-title"><%= artisan.first_name %> <%= artisan.last_name %></h6>
            <i class="fas fa-heart float-right"></i>
            <i class="fas fa-share float-right" style="margin-right: 10px"></i>
            <%= render 'shared/rating', artisan: artisan %>
          </div>
          <% if artisan.achievements.any? %>
              <%= cl_image_tag artisan.achievements.first.photo, class:"img-thumbnail image-large-card" %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>




