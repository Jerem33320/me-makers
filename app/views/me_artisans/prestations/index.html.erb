<div class="container">
    <h1 style="text-align: center; margin-top: 20px">Tous mes devis</h1>
    <% @prestations.each do |prestation| %>
      <div class="card" style="margin-bottom: 30px">
        <div class="card-body" style="color: #545d7e; text-shadow:none">
          <div class="row">
            <div class="col-4">
              <img src="https://kitt.lewagon.com/placeholder/users/random" alt="..." class="rounded float-left" style="height: 100px; width: 100px">
            </div>
            <div class="col-8">
              <h5 class="card-title"><%= link_to prestation.title, prestation_path(prestation) %></h5>
                <p>
                <a class="btn btn-light btn-sm" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                  Show description
                </a>
              </p>
              <div class="collapse" id="collapseExample">
                <div class="card card-body"><%= prestation.description %></div>
              </div>
              <p class="card-text"><%= prestation.user.first_name %> <%= prestation.user.last_name %></p>
              <i class="fas fa-trash float-right"></i>
              <i class="fas fa-edit float-right" style="margin-right: 10px"></i>
              <i class="fas fa-thumbs-up float-right" style="margin-right: 10px; color: #F5A623"></i>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>




