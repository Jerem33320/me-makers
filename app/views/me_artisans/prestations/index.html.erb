<div class="container">

  <h1 class="top-title">Tous mes devis</h1>

  <div style="text-align: center; margin-bottom: 30px">
      <img src="https://www.edx.org/sites/default/files/course/image/featured-card/business-immersion-illustration_318x210.jpg">
  </div>

<% @prestations.each do |prestation| %>
    <div class="row no-gutters" style="margin-bottom: 30px;">
      <div class="col-auto">
        <%= cl_image_tag prestation.project.photo, class: "img-fluid", style: "height: 120px; width: 120px;" %>
      </div>
      <div class="col" style="border-style: solid; border-width:1px; border-color: #f5a62347">
          <div class="card-block px-2" style="padding-top: 10px;">
            <h5 class="card-title"><%= link_to prestation.title, prestation_path(prestation), {:style=>'color:#F5A623',}%></h5>
                <p style="color: #535D7E"><%= prestation.description %></p>
          </div>
      </div>
      <div class="col-1" style="background-color: #F5A623; text-align: center; padding-top: 80px">
        <%= link_to edit_me_artisans_prestation_path(prestation) do %>
        <i class="fas fa-edit" style="color: white; padding-bottom: 10px"></i>
      <% end %>
      </div>
    </div>
  <% end %>


</div>


